<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">



    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Contactos"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/negra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista Negra"
        android:textSize="25dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/blanca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista Blanca"
        android:textSize="25dp"/>

    <TextView
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estatus Autocontestadora"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView"
        android:textStyle="bold"
        android:background="@color/purple_200"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="ACTIVADO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center">

        <Button
            android:id="@+id/activar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="activar"
            android:textSize="25dp"/>

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/desactivar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="desactivar"
            android:textSize="25dp"/>

    </LinearLayout>

</LinearLayout>